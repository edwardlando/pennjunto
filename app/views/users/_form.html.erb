,<%= form_for @user, :validate => true do |f| %>

  <div class="field">
    <%= f.text_field :name, :placeholder => "name", :class => "enter" %>
  </div>

  <div class="field">
    <%= f.text_field :email, :placeholder => "your gmail", :class => "enter" %>
  </div>

  <div class="field">
    <%= f.text_field :referrer, :placeholder => "who referred you?", :class => "enter" %>
  </div>

  <div class="field">
    <%= f.text_field :study, :placeholder => "what do you study?", :class => "enter" %>
  </div>

  <div class="field">
    <%= f.text_area :question1, :placeholder => "something amazing about you", :class => "enter longer", :size => 150  %>
  </div>

  <div class="field">
    <%= f.text_area :question3, :placeholder => "describe the most successful version of yourself ten years from now", :class => "enter longer", :size => 150 %>
  </div>

  <div class="field">
    <%= f.text_field :question2, :placeholder => "anything else?", :class => "enter" %>
  </div>

  <div class="actions">
    <%= f.submit "Done", :class => "btn" %>
  </div>

  <br/><br/>
  <div><a href="http://en.wikipedia.org/wiki/Junto_(club)">Junto?</a></div>

<% end %>
